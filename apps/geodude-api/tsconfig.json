{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "dist",
    "noEmit": true,
    "composite": true,
    "skipLibCheck": true,
    "strict": false,
    "types": [
      "@cloudflare/workers-types"
    ],
    "lib": [
      "ES2022"
    ]
  },
  "include": [
    "src/worker.js",
    "src/config.ts",
    "src/cors.ts",
    "src/schema-validator.ts",
    "src/auth-middleware.ts",
    "src/email-service.ts",
    "src/metrics.ts",
    "src/rate-limiter.ts",
    "src/security-headers.ts",
    "src/auth.ts",
    "src/metadata-sanitizer.ts",
    "src/alerts.ts",
    "src/utils.ts",
    "src/logging.ts",
    "src/lib/**/*.ts",
    "src/ai-lite/**/*.ts",
    "src/metrics/**/*.ts",
    "src/routes/**/*.ts"
  ],
  "exclude": [
    "scripts/**/*",
    "tests/**/*",
    "src/worker-*.ts",
    "src/worker-new.ts",
    "src/worker-simple.ts",
    "src/classifier.ts"
  ]
}