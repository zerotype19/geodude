# Production Environment Variables
# Copy this file to .env and fill in your values

# Base URLs
PUBLIC_BASE_URL=https://api.optiview.ai

# Security
SESSION_SECRET=your-32-byte-session-secret-here
COOKIE_NAME=ov_sess
SESSION_TTL_HOURS=720
OTP_EXP_MIN=10

# Rate Limiting
LOGIN_RPM_PER_IP=10
LOGIN_RPD_PER_EMAIL=50
INGEST_RATE_LIMIT_RPS=10
INGEST_RATE_LIMIT_BURST=50
RATE_LIMIT_RETRY_AFTER=5
CSV_EXPORT_RATE_LIMIT_RPS=1
ADMIN_RPM_PER_IP=30

# Admin Bootstrap
ADMIN_BOOTSTRAP_EMAIL=admin@yourcompany.com

# Email Configuration
DEV_MAIL_ECHO=false
EMAIL_FROM=noreply@optiview.ai
SMTP_HOST=smtp.yourprovider.com
SMTP_PORT=587
SMTP_USER=your-smtp-username
SMTP_PASS=your-smtp-password

# Demo Mode
DEMO_MODE_ENABLED=false

# Rules Refresh
RULES_REFRESH_TTL_SEC=300

# Slack Integration
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# CORS
ALLOWED_ORIGINS_FALLBACK=https://yourdomain.com

# CSP Mode
CSP_MODE=production
