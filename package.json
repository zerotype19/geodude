{
  "name": "geodude",
  "private": true,
  "packageManager": "pnpm@9.0.0",
  "scripts": {
    "dev": "turbo run dev --parallel",
    "build": "turbo run build",
    "deploy": "turbo run deploy",
    "deploy:api": "cd packages/api-worker && npx wrangler deploy",
    "deploy:collector": "cd packages/collector-worker && npx wrangler deploy",
    "deploy:workers": "pnpm deploy:api && pnpm deploy:collector",
    "migrate:local": "wrangler d1 migrations apply optiview_db --local --file db/migrations/0001_init.sql && wrangler d1 migrations apply optiview_db --local --file db/migrations/0002_seed.sql",
    "migrate": "wrangler d1 migrations apply optiview_db"
  },
  "devDependencies": {
    "turbo": "^2.0.0"
  }
}

